<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mzule.fantasyslide.FantasyDrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/isConnected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/disconnect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/connectButton"
                    android:background="@drawable/bluetooth"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/stepCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/footstep5"
                android:gravity="center"
                android:text="0"
                android:textColor="#400"
                android:textSize="80sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/currentState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="burada veriler gozukucek"/>

        <TextView
            android:id="@+id/calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Calories Burnt: "/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"

                app:srcCompat="@drawable/hearthbeat" />

            <TextView
                android:id="@+id/beatCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="0 BPM"
                android:textColor="#400"
                android:textSize="42sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

    </LinearLayout>


        <com.github.mzule.fantasyslide.SideBar
            android:id="@+id/leftSideBar"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorPrimary"
            app:maxTranslationX="66dp">

            <LinearLayout
                android:id="@+id/userInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/logo2" />

                <TextView
                    android:id="@+id/but0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aTracker"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/but1"
                style="@style/MenuText"
                android:drawableLeft="@drawable/homescreen"
                android:text="Main Screen" />

            <TextView
                android:id="@+id/but2"
                style="@style/MenuText"
                android:drawableLeft="@drawable/graph"
                android:text="Check Logs" />

            <TextView
                android:id="@+id/but3"
                style="@style/MenuText"
                android:drawableLeft="@drawable/settings"
                android:text="Settings" />

            <TextView
                android:id="@+id/but4"
                style="@style/MenuText"
                android:text=" " />

            <TextView
                android:id="@+id/but5"
                style="@style/MenuText"
                android:text=" " />


            <TextView
                android:id="@+id/but6"
                style="@style/MenuText"
                android:drawableLeft="@drawable/exit"
                android:text="Leave App" />


        </com.github.mzule.fantasyslide.SideBar>
    </com.github.mzule.fantasyslide.FantasyDrawerLayout>

</android.support.constraint.ConstraintLayout>