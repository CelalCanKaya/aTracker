<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mzule.fantasyslide.FantasyDrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Bar/Pie" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <FrameLayout
                    android:id="@+id/fragmentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">></FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:padding="10dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="left"
                        app:srcCompat="@drawable/walk" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_horizontal"
                        android:text="20 Hours 50 Minutes\nWalk" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:padding="10dp"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        app:srcCompat="@drawable/run" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_horizontal"
                        android:text="20 Hours 50 Minutes\nRun" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:padding="10dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="left"
                        app:srcCompat="@drawable/sleep" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_horizontal"
                        android:text="20 Hours 50 Minutes\nSleep" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:padding="10dp"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        app:srcCompat="@drawable/updown" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_horizontal"
                        android:text="154 Stairs Up\n104 Stairs Down" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>




        <com.github.mzule.fantasyslide.SideBar
            android:id="@+id/leftSideBar"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorPrimary"
            app:maxTranslationX="66dp">

            <LinearLayout
                android:id="@+id/userInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/logo2" />

                <TextView
                    android:id="@+id/but0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aTracker"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/but1"
                style="@style/MenuText"
                android:drawableLeft="@drawable/homescreen"
                android:text="Main Screen" />

            <TextView
                android:id="@+id/but2"
                style="@style/MenuText"
                android:drawableLeft="@drawable/graph"
                android:text="Check Logs" />

            <TextView
                android:id="@+id/but3"
                style="@style/MenuText"
                android:drawableLeft="@drawable/settings"
                android:text="Settings" />

            <TextView
                android:id="@+id/but4"
                style="@style/MenuText"
                android:text=" " />

            <TextView
                android:id="@+id/but5"
                style="@style/MenuText"
                android:text=" " />


            <TextView
                android:id="@+id/but6"
                style="@style/MenuText"
                android:drawableLeft="@drawable/exit"
                android:text="Leave App" />


        </com.github.mzule.fantasyslide.SideBar>
    </com.github.mzule.fantasyslide.FantasyDrawerLayout>

</android.support.constraint.ConstraintLayout>